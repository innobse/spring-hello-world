<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="mySuperLogger" class="ru.bse71.learnup.spring.hello.services.Logger" />
    
    <bean id="mySuperService" class="ru.bse71.learnup.spring.hello.services.SuperService"
          init-method="init" destroy-method="destroyCustom">
        <constructor-arg name="logger" type="ru.bse71.learnup.spring.hello.services.Logger" ref="mySuperLogger" />
    </bean>

    <bean class="ru.bse71.learnup.spring.hello.services.MyPostProcessor" />

</beans>